{
  "name": "web-content-scraper",
  "version": "1.0.0",
  "description": "Apify Actor that crawls websites and extracts clean, token-efficient Markdown suitable for RAG pipelines and LLM workflows. Best for AI, LangChain, LlamaIndex.",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest"
  },
  "keywords": [
    "apify",
    "actor",
    "web-scraper",
    "llm",
    "rag",
    "markdown",
    "content-extraction",
    "ai",
    "crawler",
    "vector-database",
    "langchain"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "apify": "^3.2.6",
    "crawlee": "^3.12.1",
    "jsdom": "^24.1.3",
    "playwright": "^1.58.1",
    "turndown": "^7.2.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
